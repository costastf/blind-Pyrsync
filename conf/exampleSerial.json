{ "jobs" :
    { "Backup Job Name 1" :
        { "source"      : "/absolute/path/to/the/directory/to/be/rsynced",
          "destination" : "relative/path/to/the/destination/drive"
        },
      "Variable Backup Job Name 2" :
        { "source"      : "/absolute/path/to/the/directory/to/be/rsynced",
          "destination" : "relative/path/to/the/destination/drive",
          "defaults"    : true,
          "delete"      : false
        },
      "Job whatever" :
        { "source"      : "/absolute/path/to/the/directory/to/be/rsynced",
          "destination" : "bin",
          "exclude"     : "*.sh *.mp3"        
        },
      "ETC Backup" :
        { "source"      : "/etc",
          "destination" : "etc"
        }        
    },
    
  "options" :
    { "enabled" : true,
      "eject"   : true,
      "percentageWarning" : 90
    },
    
  "report" :
  { "stdout"    : false,
    "log"       : false,
    "summary"   : true
  }
}

